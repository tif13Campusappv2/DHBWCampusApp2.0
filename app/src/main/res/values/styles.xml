<resources>
    <!--
    ##################################
    #  Allgemeines
    ##################################
    -->

    <style name="hline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/darkgrey</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/lightgrey</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="defaultVerticalLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Headerline" parent="defaultVerticalLayout">
        <item name="android:textSize">@dimen/h1</item>
        <item name="android:textColor">@color/dhbwRed</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <!--
    ##################################
    #  News
    ##################################
    -->

    <style name="news_newsitem_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:background">@drawable/panelbox</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:weightSum">11</item>
    </style>

    <style name="news_newsitem_image">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:src">@drawable/feed</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:contentDescription">@string/news_image_desc</item>
    </style>

    <style name="news_newsitem_innercontainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">9</item>
        <item name="android:padding">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="news_newsitem_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">1dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="news_newsitem_description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">1dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--
    ##################################
    #  Guthaben
    ##################################
    -->

    <style name="guthaben_list_container">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="guthaben_list_icon">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:contentDescription">@string/guthaben_list_icon_desc</item>
    </style>

    <style name="guthaben_list_amount">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="guthaben_list_desc">
    <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">17sp</item>
    </style>


    <!--
    ##################################
    #  Startscreen
    ##################################
    -->

    <!-- Mensa -->
    <style name="startscreen_mensa_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/panelbox</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="startscreen_mensa_innercontainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">10</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="startscreen_mensa_headline" parent="@style/Headerline">
        <item name="android:layout_weight">5</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="startscreen_mensa_date">
        <item name="android:layout_weight">5</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="startscreen_mensa_des">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="startscreen_mensa_name">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">6</item>
    </style>

    <style name="startscreen_mensa_price">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:layout_weight">2</item>
    </style>

    <!-- Guthaben -->
    <style name="innerbox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/p</item>
        <item name="android:background">#fff</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="guthabenAnzahlLayout">
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="guthabenIcons">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <!--
    ##################################
    #  Mensa
    ##################################
    -->
    <style name="mensa_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/panelbox</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="mensa_innercontainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">10</item>
    </style>

    <!-- Menues -->
    <style name="mensa_menue_headline">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/h1</item>
        <item name="android:textColor">@color/dhbwRed</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:layout_weight">7</item>
    </style>

    <style name="mensa_menue_price">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:layout_weight">3</item>
    </style>

    <style name="mensa_menue_ExInHl">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mensa_menue_ExIn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">5</item>
    </style>

    <style name="mensa_menue_name">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">9</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="mensa_menue_additonals">
        <item name="android:layout_gravity">end|bottom</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:contentDescription">@string/mensa_menue_additonals_des</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Kennzeichnung -->
    <style name="mensa_ken_row">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:padding">3dp</item>

    </style>

    <style name="mensa_ken_no">
        <item name="android:layout_column">0</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

    <style name="mensa_ken_des">
        <item name="android:layout_column">1</item>
        <item name="android:layout_span">1</item>
    </style>


</resources>
